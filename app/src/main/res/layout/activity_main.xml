<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.escobar.j0e009t.tictactoe.MainActivity">


    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/O_position1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            app:srcCompat="@drawable/letter_o" />

        <ImageView
            android:id="@+id/O_position2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            app:srcCompat="@drawable/letter_o" />

        <ImageView
            android:id="@+id/O_position3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            app:srcCompat="@drawable/letter_o" />

        <ImageView
            android:id="@+id/O_position4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            app:srcCompat="@drawable/letter_o" />

        <ImageView
            android:id="@+id/O_position5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            app:srcCompat="@drawable/letter_o" />

        <ImageView
            android:id="@+id/O_position6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            app:srcCompat="@drawable/letter_o" />

        <ImageView
            android:id="@+id/O_position7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            app:srcCompat="@drawable/letter_o" />

        <ImageView
            android:id="@+id/O_position8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            app:srcCompat="@drawable/letter_o" />

        <ImageView
            android:id="@+id/O_position9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            app:srcCompat="@drawable/letter_o" />

    </GridLayout>
</RelativeLayout>
