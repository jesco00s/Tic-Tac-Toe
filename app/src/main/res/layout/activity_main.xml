<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.escobar.j0e009t.tictactoe.MainActivity">


    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/position0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:onClick="placeImg"
            android:tag="0"/>

        <ImageView
            android:id="@+id/position1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:onClick="placeImg"
            android:tag="1"/>

        <ImageView
            android:id="@+id/position2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:onClick="placeImg"
            android:tag="2"/>

        <ImageView
            android:id="@+id/position3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            android:onClick="placeImg"
            android:tag="3"/>

        <ImageView
            android:id="@+id/position4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            android:onClick="placeImg"
            android:tag="4"/>

        <ImageView
            android:id="@+id/position5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            android:onClick="placeImg"
            android:tag="5"/>

        <ImageView
            android:id="@+id/position6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:onClick="placeImg"
            android:tag="6"/>

        <ImageView
            android:id="@+id/position7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:onClick="placeImg"
            android:tag="7"/>

        <ImageView
            android:id="@+id/position8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:onClick="placeImg"
            android:tag="8"/>

    </GridLayout>
</RelativeLayout>
